<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="gamePane" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vinnsla.SlotsController"
            prefHeight="800.0" prefWidth="1000.0"
            stylesheets="@../css/Slots.css">

   <children>
      <StackPane layoutX="330.0" layoutY="400.0">
         <children>
            <HBox alignment="CENTER" spacing="20">
               <StackPane>
                  <ImageView fx:id="slot1" fitHeight="100" fitWidth="100" />
               </StackPane>
               <StackPane>
                  <ImageView fx:id="slot2" fitHeight="100" fitWidth="100" />
               </StackPane>
               <StackPane>
                  <ImageView fx:id="slot3" fitHeight="100" fitWidth="100" />
               </StackPane>
            </HBox>
         </children>
      </StackPane>

      <Label fx:id="resultLabel" alignment="TOP_CENTER" contentDisplay="CENTER"
             layoutX="360.0" layoutY="173.0" prefHeight="31.0" prefWidth="280.0" textAlignment="CENTER" />
      <Label fx:id="balanceLabel" layoutX="331.0" layoutY="539.0" prefHeight="20.0" prefWidth="166.0" />
      <TextField fx:id="betField" layoutX="304.0" layoutY="612.0" prefHeight="33.0" prefWidth="85.0" />
      <Button fx:id="spinButton" layoutX="482.0" layoutY="612.0" mnemonicParsing="false"
              onAction="#spin" prefHeight="33.0" prefWidth="63.0" text="Spin" />
      <Button layoutX="878.0" layoutY="717.0" mnemonicParsing="false"
              onAction="#BackToMenu" text="Back" />
      <ImageView fitHeight="202.0" fitWidth="188.0" layoutX="812.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/scLogoClear.png" />
         </image>
      </ImageView>
      <Button layoutX="396.0" layoutY="612.0" mnemonicParsing="false"
              onAction="#setBet" prefHeight="32.0" prefWidth="79.0" text="Set Bet" />
      <Label fx:id="betAmountLabel" layoutX="330.0" layoutY="218.0" prefHeight="20.0" prefWidth="167.0" text="Bet: $0" />
      <Button layoutX="778.0" layoutY="717.0" mnemonicParsing="false"
              onAction="#SlotsRules" text="Rules" />
      <Button fx:id="autoSpinButton" layoutX="554.0" layoutY="612.0" mnemonicParsing="false"
              onAction="#toggleAutoSpin" prefHeight="33.0" prefWidth="135.0" text="Auto" />
   </children>
</AnchorPane>