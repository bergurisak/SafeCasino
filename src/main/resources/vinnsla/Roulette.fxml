<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane pickOnBounds="false" prefHeight="800.0" prefWidth="1000.0"
            stylesheets="@../css/SafeCasino.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vinnsla.RouletteController">
   <children>

      <!-- Top-right logo -->
      <ImageView fitHeight="212.0" fitWidth="210.0" layoutX="790.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/scLogoClear.png" />
         </image>
      </ImageView>

      <!-- "ROULETTE" text image -->
      <ImageView fitHeight="678.0" fitWidth="674.0" layoutX="163.0" layoutY="-81.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Roulette.png" />
         </image>
      </ImageView>

      <!-- Roulette wheel -->
      <Pane layoutX="39.0" layoutY="203.0" prefHeight="575.0" prefWidth="923.0">
         <children>
            <ImageView fitHeight="775.0" fitWidth="766.0" layoutX="79.0" layoutY="89.0" pickOnBounds="true" preserveRatio="true" rotate="-6.3">
               <image>
                  <Image url="@../images/RouletteSpinner.png" />
               </image>
            </ImageView>
         </children>
      </Pane>

      <!-- Start button -->
      <Button fx:id="startButton"
              layoutX="440" layoutY="320"
              prefWidth="120" prefHeight="45"
              text="START"
              styleClass="golden-button"
              onAction="#startRoulette" />

      <!-- Back button -->
      <Button layoutX="822.0" layoutY="717.0"
              mnemonicParsing="false"
              onAction="#BackToMenu"
              prefHeight="40.0" prefWidth="99.0"
              text="Back"
              AnchorPane.bottomAnchor="49.0"
              AnchorPane.leftAnchor="822.0"
              AnchorPane.rightAnchor="79.0"
              AnchorPane.topAnchor="717.0" />

      <!-- Balance and bet display -->
      <Label fx:id="balanceLabel" layoutX="60.0" layoutY="620.0" text="Balance: $" styleClass="roulette-label"/>
      <Label fx:id="betLabel" layoutX="60.0" layoutY="650.0" text="Bet: $" styleClass="roulette-label"/>

      <!-- Bet adjustment buttons -->
      <Button text="+" layoutX="180.0" layoutY="645.0" onAction="#increaseBet" />
      <Button text="-" layoutX="220.0" layoutY="645.0" onAction="#decreaseBet" />

      <!-- Bet number input -->
      <Label layoutX="60.0" layoutY="690.0" text="Your number:" styleClass="roulette-label" />
      <TextField fx:id="betNumberField" layoutX="140.0" layoutY="685.0" prefWidth="60.0" />

      <!-- Result message -->
      <Label fx:id="resultLabel" layoutX="420.0" layoutY="690.0" text="" styleClass="roulette-result" />

   </children>
</AnchorPane>