      </ImageView>

          <Text fx:id="resultText" layoutX="450.0" layoutY="543.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="99.3" />
    <Text fx:id="balanceText" layoutX="643.0" layoutY="441.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="99.3" />
