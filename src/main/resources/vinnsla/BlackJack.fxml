      <AnchorPane fx:id="cardPane" layoutX="5.0" prefHeight="743.0" prefWidth="989.0">
         <children>
            <ImageView fitHeight="837.0" fitWidth="874.0" layoutX="107.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="45.0">
               <image>
                  <Image url="@../images/BJTable%20v2.png" />
