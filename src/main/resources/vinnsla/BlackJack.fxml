          <Button fx:id="hitButton" layoutX="425.0" layoutY="604.0" mnemonicParsing="false" onAction="#onHit" prefHeight="25.0" prefWidth="75.0" text="Hit!" />
         </children>
      </AnchorPane>
  </children>
